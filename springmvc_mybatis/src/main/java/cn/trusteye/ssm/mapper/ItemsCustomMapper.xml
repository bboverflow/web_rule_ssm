<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.trusteye.ssm.mapper.ItemsCustomMapper" >

  <sql id="query_items_where">
    <if test="itemsCustom!=null">
      <if test="itemsCustom.name!=null and itemsCustom.name!=''" >
        AND name LIKE '%${itemsCustom.name}%'
      </if>
    </if>
  </sql>

  <select id="findItemsList" parameterType="cn.trusteye.ssm.vo.ItemsQueryVo" resultType="cn.trusteye.ssm.po.ItemsCustom">
    SELECT * FROM items
    <where>
      <include refid="query_items_where"/>
    </where>
  </select>

  <select id="deleteItems" parameterType="cn.trusteye.ssm.vo.ItemsQueryVo">
    DELETE * FROM USER
    <where>
      <if test="items_id!=null">
        <foreach collection="items_id" item="item_id" open="AND (" close=")" separator="OR">
          id=#{item_id}
        </foreach>
      </if>
    </where>
  </select>

</mapper>